<%- include("partials/header.ejs") %>

<div class="container mt-5 mb-5">
  <h1 class="text-center mb-4">Home Page</h1>
  <% if (locals.articleslist) { %>
  <div class="col-lg-6 col-md-8 col-11 mx-auto">

    <% locals.articleslist.forEach(element => {%>
      <div class="py-3 py-md-4 border-bottom">
        <li>
        <form action="/submit" method="POST">
          <button type="submit" class="d-block text-decoration-none text-primary fw-semibold fs-6 fs-md-5 text-center text-md-left" name="articleName" value="<%=element%>">
          <%=element%>
          </button>
        </form>
      </li>


      </div>
    <% }) %>

  </div>

  <% } else { %>
    <p>No articles found.</p>
    <a class="btn btn-outline-primary" href="/new"><i class="fas fa-plus"></i>Add New Article</a>
  <% } %>
</div>

<%- include("partials/footer.ejs") %>